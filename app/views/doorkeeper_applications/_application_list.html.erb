<%= GovukPublishingComponents::AppHelpers::TableHelper.helper(self, "Applications", { caption_classes: "govuk-visually-hidden" }) do |t| %>
  <%= t.head do %>
    <%= t.header "Name" %>
    <%= t.header "Description" %>
  <% end %>

  <%= t.body do %>
    <% applications.each do |application| %>
      <%= t.row do %>
        <%= t.cell link_to application.name, edit_doorkeeper_application_path(application), class: "govuk-link" %>
        <%= t.cell application.description %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
